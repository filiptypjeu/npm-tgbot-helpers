{
    "name": "tgbot-helpers",
    "version": "1.16.5",
    "description": "NPM package with a few helper methods for node-telegram-bot-api TelegramBots.",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "deploy": "bash deploy.sh",
        "dev": "nodemon src/index.ts",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "lint-fix": "tslint -p tsconfig.json --fix",
        "postversion": "git push && git push --tags",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run format && npm run lint",
        "test": "jest --config jestconfig.json --coverage",
        "version": "npm run format && git add -A src"
    },
    "author": "Filip Stenbacka",
    "license": "ISC",
    "types": "dist/index.d.ts",
    "devDependencies": {
        "@types/jest": "^24.9.1",
        "@types/request-promise": "^4.1.46",
        "@types/sanitize-html": "^1.23.3",
        "jest": "^26.1.0",
        "prettier": "^1.19.1",
        "ts-jest": "^26.1.1",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.9.6"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:filiptypjeu/npm-tgbot-helpers.git"
    },
    "homepage": "https://github.com/filiptypjeu/npm-tgbot-helpers",
    "dependencies": {
        "@types/node-telegram-bot-api": "^0.40.3",
        "@types/node-localstorage": "^1.3.0",
        "node-localstorage": "^2.1.6",
        "node-telegram-bot-api": "^0.40.0",
        "read-last-lines": "^1.7.2",
        "request-promise": "^4.2.5",
        "sanitize-html": "^1.27.2"
    },
    "files": [
        "dist/**/*"
    ],
    "keywords": [
        "telegram",
        "TG",
        "bot"
    ]
}
